{
    "name": "brochure-starter/brochure-starter",
    "description": "PHP brochure website starter kit with quality gates and Claude Code integration",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "wildbit/postmark-php": "^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "BrochureSite\\": "src/includes/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "find src -name '*.php' -exec php -l {} \\;",
        "phpstan": "phpstan analyse -l 9 src/",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/",
        "cs-fix": "php-cs-fixer fix src/",
        "test": [
            "@lint",
            "@phpstan",
            "@phpcs"
        ]
    }
}
