<?xml version="1.0"?>
<ruleset name="BrochureStarter">
    <description>PSR-12 coding standard for Brochure Starter projects</description>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Exclude assets directory -->
    <exclude-pattern>src/assets/*</exclude-pattern>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show colors in output -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Check PHP files only -->
    <arg name="extensions" value="php"/>

    <!-- Allow some flexibility for templates -->
    <rule ref="PSR12.Files.FileHeader">
        <exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Ensure declare(strict_types=1) is present -->
    <rule ref="Generic.PHP.RequireStrictTypes"/>
</ruleset>
